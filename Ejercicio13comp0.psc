Algoritmo Ejercicio13comp0
	Definir num Como Real;
	num = 0;
	Escribir "Mayor, menor o igual a 0";
	Escribir "Dime un número: ";
	Leer num;
	Si num>0 Entonces
		Escribir "El número ",num," es mayor a 0.";
	FinSi
