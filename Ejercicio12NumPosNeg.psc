Algoritmo Ejercicio12NumPosNeg
	Definir num Como Real;
	num = 0;
	Escribir "Número negativo o positivo";
	Escribir "Dime un número: ";
	Leer num;
	Si num<0 Entonces
		Escribir "El número ", num, " es negativo.";
	FinSi
	Si num>0 Entonces
		Escribir "El número ", num," es positivo.";
	FinSi
FinAlgoritmo
